<h1>New server</h1>

<% form_for(@server) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :alias %><br />
    <%= f.text_field :alias %>
  </p>
  <p>
    <%= f.label :public_name %><br />
    <%= f.text_field :public_name %>
  </p>
  <p>
    <%= f.label :private_name %><br />
    <%= f.text_field :private_name %>
  </p>
  <p>
    <%= f.label :public_ip %><br />
    <%= f.text_field :public_ip %>
  </p>
  <p>
    <%= f.label :private_ip %><br />
    <%= f.text_field :private_ip %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', servers_path %>
